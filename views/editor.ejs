<%- include('partials/header'); -%>

    <div class="headings">
      <h3>Editor</h3>
    </div>
  </header>
  <main>
    <hr>
    <form>
      <label for="title">Title</label><br>
      <input type="text" name="title" class="form-el" required><br>

      <label for="subtitle">Subtitle</label><br>
      <input type="text" name="subtitle" class="form-el"><br>

      <label for="body">Content</label><br>
      <textarea name="body" class="form-el" required></textarea><br>

      <label for="tags">Tags</label><br>
      <input type="text" name="tags" class="form-el"><br>

      <label for="published">Publish?</label>
      <input type="checkbox" name="published" class="form-el"><br>
      
      <input type="hidden" name="author" class="form-el" value="<%= user.id %>">
      <button>Save Post</button>
    </form>
    <hr>
  </main>

  <script src="scripts/savePost.js"></script>

<%- include('partials/footer'); -%>