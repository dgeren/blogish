<% 
const { pseudonym, shortText, _id } = contributor;
const role = user.roll || null;
const userID = user._id ? user._id.toString() : null;
%>

<div class="card">
  <img src="/images/contributor-pics/<%= _id %>.JPG" class="profile-pic--list">

  <% if(userID !== null && (userID === _id || role === "admin")) { %>
    <a href="/admin/<%= _id %>" class="edit-button">[ &#9998; ]</a>
  <% } %>
  <h3><a href="/contributor/<%= _id %>"><%= pseudonym %></a> <%= _id %></h3>

  <p class="description"><%= shortText %></p>

</div>