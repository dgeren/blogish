<%
const { _id, pseudonym, html, entries, byline } = contributors[i];
const contributorID = contributors[i]._id.toString(); // requested contributor
const isOwner = user ? contributorID === user._id.toString() : false;
const role = user ? user.role : "";
%>

<div class="title-box">
  <% if(isOwner || role === "admin") { %>
    <a href="/admin/<%= contributorID %>" class="edit-button">[ &#9998; ]</a>
  <% } %>

  <h2><%- pseudonym %></h2>
  <h3><%- byline %></h3>
</div>

<div class="reader--contributor">
  <%- html %>
</div>
<br><br><br>
<h3><%- pseudonym %>'s Entries</h3>

<% entries.forEach(entry => { %>
<%- include('../partials_entry/card', { entry, users: false }); %>
<% }); %>
