<% const pageType = requestedTag ? `listByTags/${requestedTag}` : `listByDate`; %>

<% if (page > 1) { %>
  <a href="<%= `/${pageType}/${ page - 1 }` %>" class="pagination">&lt; Previous </a>
<% } %>

<% if (page < pages) { %>
  <a id="next" href="<%= `/${pageType}/${ page + 1 }` %>" class="pagination">Next &gt;</a><br>
<% } %>
    
<% if (adjacentEntries) { %>
  <div class="adjacents">
    <% if (adjacentEntries.prev) { %>
      <div class="adjacents--previous"><a href="/reader/slug/<%= adjacentEntries.prev.slug %>" class="pagination">Previous: <%= adjacentEntries.prev.title %></a></div>
    <% } %>
    <% if (adjacentEntries.next) { %>
      <div class="adjacents--next"><a id="next" href="/reader/slug/<%= adjacentEntries.next.slug %>" class="pagination">Next: <%= adjacentEntries.next.title %></a></div>
    <% } %>
  </div>
<% } %>