        <li class="medium"><a href="/admin">Admin</a></li>
      <% } %>
      </ul>
      <% if(user){ %>
      <li id="logged-in-as" class="medium">'<%= user.email %>' [<a href="/logout">Log Out</a>]</li>
      <% } %>

      <h1><a href="/">Blogish</a></h1>
      <h2>A Career-Change Misadventure</h2>
      
      <form id="signin-form" style="display: none;">
        <input class="signin-el" type="text" name="email" placeholder="Email address" required>
        <input class="signin-el" type="password" name="password" placeholder="Password" required>
        <button class="signin-el">Log in</button>
      </form>
    </div>